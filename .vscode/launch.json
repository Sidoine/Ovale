{
    // Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
    // Pointez pour afficher la description des attributs existants.
    // Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "SimulationCraft",
            "program": "${workspaceFolder}/dist/src/utils/importsimc.js",
            "protocol": "inspector",
            "args": ["../../simc/", "T25_Death_Knight_Blood.simc"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src\\Options.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava.cmd",
            "runtimeArgs": [
                "--serial",
                "${workspaceFolder}/dist/${relativeFileDirname}/${fileBasenameNoExtension}.js"
            ],
            "outputCapture": "std",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "protocol": "inspector",
            "skipFiles": ["<node_internals>/**/*.js"]
        }
    ]
}
